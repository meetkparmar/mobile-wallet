<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:layout_marginBottom="@dimen/value_16dp">

    <EditText
        android:id="@+id/et_doc_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_document_name"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_upload_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:drawableEnd="@drawable/bg_add_document"
        android:drawableRight="@drawable/bg_add_document"
        android:focusable="false"
        android:hint="@string/text_upload_file"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_doc_number" />

</android.support.constraint.ConstraintLayout>