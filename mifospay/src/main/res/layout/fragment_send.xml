<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_send_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_20dp"
            android:text="@string/select_transfer_method"
            android:textSize="@dimen/value_18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_20dp"
            android:layout_marginRight="@dimen/value_20dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <android.support.design.chip.Chip
                android:id="@+id/btn_vpa"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:text="@string/vpa"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:typeface="sans"
                app:chipBackgroundColor="@color/clickedblue" />

            <android.support.design.chip.Chip
                android:id="@+id/btn_mobile"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="61dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingRight="@dimen/value_10dp"
                android:text="@string/mobile_number"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="8sp"
                android:typeface="sans"
                app:chipBackgroundColor="@color/changedBackgroundColour" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/value_20dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/amount_from_layout"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="@dimen/value_20dp"
                    android:layout_marginEnd="@dimen/value_20dp"
                    app:layout_constraintEnd_toStartOf="@id/btn_convert_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/amount_from_currency_layout"
                        android:layout_width="@dimen/value_120dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/amount_from_currency_code"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/down_arrow1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/down_arrow1"
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_30dp"
                            android:background="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>


                    <EditText
                        android:id="@+id/et_amount_from"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="@dimen/value_20dp"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/amount_from_currency_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/amount_to_layout"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:layout_marginTop="@dimen/value_15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/amount_from_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amount_from_layout">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/amount_to_currency_layout"
                        android:layout_width="@dimen/value_120dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/amount_to_currency_code"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/down_arrow2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/down_arrow2"
                            android:layout_width="@dimen/value_30dp"
                            android:layout_height="@dimen/value_30dp"
                            android:background="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <EditText
                        android:id="@+id/et_amount_to"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="@dimen/value_20dp"
                        android:clickable="false"
                        android:enabled="false"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/amount_to_currency_layout"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/btn_convert_layout"
                    android:layout_width="@dimen/value_40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/value_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btn_convert_currency"
                        android:layout_width="@dimen/value_40dp"
                        android:layout_height="@dimen/value_40dp"
                        android:background="@drawable/ic_swap_horiz"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_vpa"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:padding="@dimen/value_10dp"
                    android:textColorHint="@android:color/black"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_vpa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/virtual_payment_address"
                        android:paddingBottom="@dimen/value_20dp"
                        android:singleLine="true"
                        android:textSize="@dimen/value_15sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/btn_scan_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:layout_marginRight="@dimen/value_50dp"
                    android:layout_marginBottom="@dimen/value_5dp"
                    android:layout_weight="0.5"
                    android:drawableTop="@drawable/qrcode_blue_selector"
                    android:gravity="center_horizontal"
                    android:textColor="@color/primaryDarkBlue" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/country_code_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:layout_toStartOf="@id/et_mobile_number"
                    android:gravity="center"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoFormatNumber="false" />

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:layout_marginRight="@dimen/value_15dp"
                    android:layout_toLeftOf="@+id/btn_search_contact"
                    android:layout_toRightOf="@id/country_code_picker"
                    android:textColorHint="@android:color/black"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/mobile_number"
                        android:inputType="number"
                        android:maxLength="@integer/telephone_numbers_max_length_standard"
                        android:paddingBottom="@dimen/value_10dp"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="@dimen/value_15sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/btn_search_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:background="@drawable/ic_contact"
                    android:gravity="bottom" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_user_details"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:layout_marginTop="@dimen/value_6dp"
                    android:layout_marginRight="@dimen/value_20dp"
                    android:layout_marginBottom="@dimen/value_6dp"
                    android:layout_toRightOf="@id/iv_user_image"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/value_15dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_15sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/value_100dp"
                    android:layout_height="@dimen/value_50dp"
                    android:layout_marginTop="@dimen/value_20dp"
                    android:layout_marginBottom="@dimen/value_20dp"
                    android:text="@string/submit"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/value_10dp"
            android:background="#44000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_20dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>